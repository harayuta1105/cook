<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity">


    <TextView
        android:id="@+id/householdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="家にある食材"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/householdEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/householdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/householdTextView"
        android:layout_marginTop="8dp"
        android:hint="食材を入力してください"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/householdTextView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/addHouseholdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/householdEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="315dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="追加"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/householdEditText"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/shoppingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addHouseholdButton"
        android:layout_marginTop="32dp"
        android:text="買う予定の食材"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addHouseholdButton"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/shoppingEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shoppingTextView"
        android:layout_marginTop="8dp"
        android:hint="食材を入力してください"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoppingTextView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/addShoppingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shoppingEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="315dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="追加"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoppingEditText"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/drawable"
        android:fontFamily="sans-serif-black"
        android:text="@string/home"
        android:textColor="#5E35B1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/backColor"
        app:layout_constraintEnd_toStartOf="@+id/menuButton"
        app:layout_constraintTop_toTopOf="@+id/backColor"
        tools:ignore="MissingConstraints,TextContrastCheck" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/drawable"
        android:fontFamily="sans-serif-black"
        android:text="@string/menu"
        android:textColor="#5E35B1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/backColor"
        app:layout_constraintEnd_toStartOf="@+id/listButton"
        app:layout_constraintTop_toTopOf="@+id/backColor"
        tools:ignore="MissingConstraints,TextContrastCheck" />

    <Button
        android:id="@+id/listButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/drawable"
        android:fontFamily="sans-serif-black"
        android:text="@string/list"
        android:textColor="#5E35B1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/backColor"
        app:layout_constraintEnd_toStartOf="@+id/optionButton"
        app:layout_constraintTop_toTopOf="@+id/backColor"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/optionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/drawable"
        android:fontFamily="sans-serif-black"
        android:text="@string/option"
        android:textColor="#5E35B1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/backColor"
        app:layout_constraintEnd_toEndOf="@+id/backColor"
        app:layout_constraintTop_toTopOf="@+id/backColor"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/backColor"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:background="@color/pa"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>